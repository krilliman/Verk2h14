@model BookCave.Models.ViewModels.CategoryViewModel
<div class="jumbotron jumbotron-fluids">

                <div id="demo" class="carousel slide" data-ride="carousel">

                <!-- Indicators -->
                <ul class="carousel-indicators">
                    <li data-target="#demo" data-slide-to="0" class="active"></li>
                    <li data-target="#demo" data-slide-to="1"></li>
                    <li data-target="#demo" data-slide-to="2"></li>
                    <li data-target="#demo" data-slide-to="3"></li>
                </ul>

                <!-- The slideshow -->
                <div class="carousel-inner">
                        <div class="carousel-item active" style="width: 40rem;">
                            <img class="mr-3" src="@Model.BOTW.Image" alt="@Model.BOTW.Name Photo">
                            <div class="media-body">
                                <h4 class="mt-0">@Model.BOTW.Name</h4>
                                <h5 class="mt-0">@Model.BOTW.Author</h5>
                                <a asp-controller="Book" asp-action="Details" asp-route-id="@Model.BOTW.ID" class="btn btn-primary">View Book</a>
                            </div>
                        </div>
                        <div class="carousel-item" style="width: 40rem;">
                            <img class="mr-3" src="@Model.UserFav.Image" alt="@Model.UserFav.Name Photo">
                            <div class="media-body">
                                <h4 class="mt-0">@Model.UserFav.Name</h4>
                                <h5 class="mt-0">@Model.UserFav.Author</h5>
                                <a asp-controller="Book" asp-action="Details" asp-route-id="@Model.UserFav.ID" class="btn btn-primary">View Book</a>
                            </div>
                        </div>
                        <div class="carousel-item" style="width: 40rem;">
                            <img class="mr-3" src="@Model.CheapestBook.Image" alt="@Model.CheapestBook.Name Photo">
                            <div class="media-body">
                                <h4 class="mt-0">@Model.CheapestBook.Name</h4>
                                <h5 class="mt-0">@Model.CheapestBook.Author</h5>
                                <a asp-controller="Book" asp-action="Details" asp-route-id="@Model.CheapestBook.ID" class="btn btn-primary">View Book</a>
                            </div>
                        </div>
                        <div class="carousel-item" style="width: 40rem;">
                            <img class="mr-3" src="@Model.NewestRelease.Image" alt="@Model.NewestRelease.Name Photo">
                            <div class="media-body">
                                <h4 class="mt-0">@Model.NewestRelease.Name</h4>
                                <h5 class="mt-0">@Model.NewestRelease.Author</h5>
                                <a asp-controller="Book" asp-action="Details" asp-route-id="@Model.NewestRelease.ID" class="btn btn-primary">View Book</a>
                            </div>
                        </div>
                </div>
            </div>
            <div>
                <!-- Left and right controls -->
                <a class="carousel-control-prev" href="#demo" data-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </a>
                <a class="carousel-control-next" href="#demo" data-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </a>
            </div>

    <div class="eitthvaddot">
        @foreach(var m in @Model.Top10AllCategories)
        {
            <ul>
            <li><h2>Top 10 <a asp-controller="Category" asp-action="SubCategory" asp-route-id="@m.ID">@m.Name</a></h2></li>            
                <ul>
                    <div class="row">
                        @foreach(var b in m.Top10Books)
                        {
                            <div class="card" style="width: 20%;">
                                <img class="card-img-top" src="@b.Image" alt="@b.Name Photo">
                                <div class="card-body">
                                    <h4 class="card-title">@b.Name</h4>
                                    <h5 class="card-text">@b.Author</h5>
                                    <a asp-controller="Book" asp-action="Details" asp-route-id="@b.ID" class="btn btn-primary">Go somewhere</a>
                                </div>
                            </div>
                        }
                    </div>
                </ul>
            </ul>
            
    

        }
        <h3>Top 10 in SubCategories</h3>
        @foreach(var m in @Model.SubCategories)
        {
            
            <ul>
            <li><h4>Top 10 <a asp-controller="Category" asp-action="SingleCat" asp-route-id="@m.ID">@m.Name</a></h4></li>
                <ul>
                @foreach(var b in m.Top10Books)
                {
                    <li><a asp-controller="Book" asp-action="Details" asp-route-id="@b.ID">@b.Name</a></li>
                }
                </ul>
            </ul>
        
        }
        
    </div>
</div>